{{#each sortedPosts as |post|}}
  {{#if collapsible}}
    {{#if collapseByDefault}}
      {{tumblr-post
      post=post
      postsRoute=postsRoute
      collapsible=true
      collapsed=true}}
    {{else}}
      {{tumblr-post
      post=post
      postsRoute=postsRoute
      collapsible=true
      collapsed=false}}
    {{/if}}
  {{else}}
    {{tumblr-post
    post=post
    postsRoute=postsRoute}}
  {{/if}}
{{/each}}