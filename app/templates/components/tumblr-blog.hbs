{{#each sortedPosts as |post|}}
  {{#if collapsible}}
    {{#if collapseByDefault}}
      {{tumblr-post
        post=post
        postsRoute=postsRoute
        collapsible=true
        collapsed=true
        formatDates=formatDates}}
    {{else}}
      {{tumblr-post
        post=post
        postsRoute=postsRoute
        collapsible=true
        collapsed=false
        formatDates=formatDates}}
    {{/if}}
  {{else}}
    {{tumblr-post
      post=post
      postsRoute=postsRoute
      formatDates=formatDates}}
  {{/if}}
{{/each}}